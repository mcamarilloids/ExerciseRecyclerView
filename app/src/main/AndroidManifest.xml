<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mariocamarillo.unammascotas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/titulo_pantalla"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ListaMascotasActivity" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MascotaActivity" android:parentActivityName=".activity.ListaMascotasActivity" android:screenOrientation="portrait" >
        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value=".activity.ListaMascotasActivity"
            />
         </activity>

</application>
    </manifest>